{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "sh ./scripts/build.sh",
    "dev": "nodemon --debug ./dist/src/index.js",
    "dev:watch": "concurrently --kill-others -n 'watcher,kiosk' -p '{name}' -c 'gray.dim,cyan' 'npm run watch' 'npm run dev'",
    "server:dev": "npm run build && npm run dev:watch",
    "start": "npm run build && npm run dev",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "concurrently": "^3.4.0",
    "graphql": "^0.9.3",
    "graphql-server-hapi": "^0.7.1",
    "graphql-subscriptions": "^0.3.1",
    "graphql-tools": "^0.11.0",
    "hapi": "^16.1.1",
    "nodemon": "^1.11.0",
    "typescript": "^2.2.2"
  },
  "devDependencies": {
    "@types/cookies": "^0.6.1",
    "@types/graphql": "^0.9.0",
    "@types/hapi": "^16.0.3"
  }
}
